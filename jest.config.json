{
    "bail": true,
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
        "./src/**/*.js",
        "!./node_modules/**"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
        "global": {
            "branches": 50,
            "functions": 50,
            "lines": 50,
            "statements": 50
        }
    }
}